type Team { 
  id: ID! @id
  name : String!
  members : Int  
  description: String
  active : Boolean 
  lead : [Staff!]!
  createdAt: DateTime! @createdAt
} 

type Group {
   id: ID! @id
  name: String!
  description: String
  members: [Staff!]
}

type Organization { 
   id: ID! @id
  createdAt: DateTime! @createdAt
  name : String!
  Teams  : Int
  leads : Int
  type: String
  description: String
   country : String
  state: String  @unique
  email : String @unique
  password: String
  staffs :  Int 
  staff :  Staff @relation(link:INLINE ,name : "OrganizationStaff"  , onDelete: CASCADE)  
 department: [Department!]!
}
 
type Department {
  id: ID!  @id
  leads: [Lead!]!
  name: String!
  teams: [Team!]!  
  createdAt: DateTime! @createdAt
}

type Testers {
  id: ID! @id
  name: String
  email: String @unique
  department: String
}

type Lead { 
  id: ID! @id
  staff: [Staff!]!
  team: [Team!]!
}

type Staff  {
  id: ID! @id
  firstname: String!
  lastname: String
  organization :  Organization @relation( name : "OrganizationStaff"  , onDelete: SET_NULL)  
  team : [Team!]!
  isLead: Boolean
  role : String
  country: String
  state: String
  email: String 
  joinedAt : DateTime! @createdAt
}


